!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "FacetedSearch"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Cable Configurator
          .container.nav-collapse
            %ul.nav
              %li= link_to "Cable List", "/cables"
              /%li= link_to "Link 2", "/path2"
              /%li= link_to "Link 3", "/path3"

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              - if @facets
                - @facets.each do |facet|
                  - if facet.options.count < 15
                    %li.nav-header= "#{facet.name} (#{facet.options[:total]}) [#{facet.relevance}]"
                    - facet.options.each do |category, times|             
                      %li= link_to "#{category} (#{times})", "?#{facet.name}=#{category}" unless category == :total
        .span9
          -# FIXME check bootstrap alerts
          -# TODO create configuration
          -# DONE migrate data
          -# TODO implement faceted search similiar to amazon & test first
          -# TODO devise test and login http://railscasts.com/episodes/209-introducing-devise?view=asciicast
          
          %p.notice= notice
          %p.alert= alert
          
          = yield
    
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
